<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_in_game_host"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="4dp"
    android:weightSum="100" >

    <!-- BARRA SUPERIOR -->

    <LinearLayout
        android:id="@+id/ll_in_game_host_action_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/actionbar"
        android:orientation="horizontal" >

        <!-- PARTE IZQ -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/title_in_game_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:paddingLeft="55dp"
                android:paddingTop="17dp"
                android:text="@+string/inGame"
                android:textAppearance="@android:style/TextAppearance.WindowTitle"
                android:textColor="@color/azul_action_bar" />
        </LinearLayout>
        <!-- PARTE DER -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_in_game_host_info"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:paddingTop="15dp"
                android:src="@drawable/ic_menu_info" />
        </LinearLayout>
    </LinearLayout>
    
    <!-- PARTE CENTRAL -->
    <LinearLayout
         android:id="@+id/ll_ingame_host_medio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="96"
        android:orientation="horizontal" >
        
        <ImageView
                android:id="@+id/iv_in_game_host_qr"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="30dp"
                android:src="@drawable/ic_menu_gear" />
        
    </LinearLayout>

     <!-- Menu -->

    <LinearLayout
        android:id="@+id/ll_in_game_host_bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="@drawable/bottom_bar_2"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="2" 
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageView
                android:id="@+id/iv_in_game_host_opciones"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="2dip"
                android:paddingRight="5dp"
                android:paddingTop="15dip"
                android:src="@drawable/ic_menu_gear" />

            <TextView
                android:id="@+id/tVleft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Opciones"
                android:textAppearance="@android:style/TextAppearance.WindowTitle"
                android:textColor="@color/azul_action_bar"
                android:textSize="11sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageView
                android:id="@+id/iv_in_game_host_ranking"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="2dip"
                android:paddingTop="15dip"
                android:src="@drawable/ic_menu_chart_bar" />

            <TextView
                android:id="@+id/tVupSc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ranking"
                android:textAppearance="@android:style/TextAppearance.WindowTitle"
                android:textColor="@color/azul_action_bar"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
    
    
</LinearLayout>