<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:id="@+id/ll_end_game_action_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:background="@drawable/actionbar"
        android:orientation="horizontal" 
        >


            <TextView
                android:id="@+id/title_end_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="17dp"
                android:text="@+string/helloArcade"
                android:textAppearance="@android:style/TextAppearance.WindowTitle"
                android:textColor="@color/azul_action_bar"
                android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_medio_end_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="87"
        android:orientation="vertical"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/cake" />

    </LinearLayout>

     <!-- Menu -->

    <LinearLayout
        android:id="@+id/ll_end_game_bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="@drawable/bottom_bar_2"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="2" 
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageView
                android:id="@+id/iv_end_game_exit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="2dip"
                android:paddingRight="5dp"
                android:paddingTop="15dip"
                android:src="@drawable/ic_menu_del_arcade" />

            <TextView
                android:id="@+id/tVleft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Reset Partida"
                android:textAppearance="@android:style/TextAppearance.WindowTitle"
                android:textColor="@color/azul_action_bar"
                android:textSize="11sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageView
                android:id="@+id/iv_end_game_ranking"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="2dip"
                android:paddingTop="15dip"
                android:src="@drawable/ic_menu_chart_bar" />

            <TextView
                android:id="@+id/tVupSc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ranking"
                android:textAppearance="@android:style/TextAppearance.WindowTitle"
                android:textColor="@color/azul_action_bar"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>