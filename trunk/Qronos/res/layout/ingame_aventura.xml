<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:id="@+id/ll_main_ingame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="100" >

        <ImageButton
            android:id="@+id/ib_info_ingame"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_menu_info"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="90"
        android:weightSum="90"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_ranking_ingame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="29"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_ranking_ingame"
                android:layout_width="32dp"
                android:layout_height="32dp"
                
                android:layout_gravity="center"
                android:background="@drawable/ic_menu_chart_bar"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_camara_ingame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" 
            android:layout_weight="30">

            <ImageButton
                android:id="@+id/ib_camara_ingame"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_menu_photo"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_opciones_ingame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="30" >

            <ImageButton
                android:id="@+id/ib_opciones_ingame"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_menu_gear"
                android:orientation="vertical" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>