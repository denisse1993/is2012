<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CenterDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/CenterDialogTitle</item>
        <item name="android:background">@drawable/actionbar</item>
    </style>

    <style name="CenterDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/azul_action_bar</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

    <style name="LetrasBar">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/azul_action_bar</item>
        <item name="android:textAppearance">@android:style/TextAppearance.StatusBar.EventContent</item>
    </style>
</resources>