<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llselecpista"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:weightSum="10" >

    <!-- BARRA SUPERIOR -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <!-- PARTE IZQ -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tVhello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@+string/helloSelecPISTA" />
        </LinearLayout>
        <!-- PARTE DER -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/iBinfoSelecPISTA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:src="@drawable/icon_information" />
        </LinearLayout>
    </LinearLayout>
    <!-- PRIMERA MJ -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="3" >

        <!-- MJ1 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageButton
                android:id="@+id/iBmj1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="@drawable/ibmj1" />

            <EditText
                android:id="@+id/eTpista1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.95"
                android:inputType="textMultiLine"
                android:maxHeight="40dp"
                android:maxWidth="40dp"
                android:textSize="10dp" >

            </EditText>

        </LinearLayout>
        <!-- MJ2 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageButton
                android:id="@+id/iBmj2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="@drawable/ibmj2" />

            <EditText
                android:id="@+id/eTpista2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.95" android:textSize="10dp" android:maxHeight="40dp" android:maxWidth="40dp"
                android:inputType="textMultiLine" >
            </EditText>
        </LinearLayout>
        <!-- MJ3 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageButton
                android:id="@+id/iBmj3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="@drawable/ibmj3" />

            <EditText
                android:id="@+id/eTpista3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.95" android:textSize="10dp" android:maxHeight="40dp" android:maxWidth="40dp"
                android:inputType="textMultiLine" >
            </EditText>
        </LinearLayout>
    </LinearLayout>
    <!-- SEGUNDA MJ -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="3" >

        <!-- MJ4 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageButton
                android:id="@+id/iBmj4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="@drawable/ibmj0" />

             <EditText
                android:id="@+id/eTpista4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.95" android:textSize="10dp" android:maxHeight="40dp" android:maxWidth="40dp"
                android:inputType="textMultiLine" >
            </EditText>
        </LinearLayout>
        <!-- MJ5 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageButton
                android:id="@+id/iBmj5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="@drawable/ibmj0" />

             <EditText
                android:id="@+id/eTpista5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.95" android:textSize="10dp" android:maxHeight="40dp" android:maxWidth="40dp"
                android:inputType="textMultiLine" >
            </EditText>
        </LinearLayout>
        <!-- MJ6 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageButton
                android:id="@+id/iBmj6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="@drawable/ibmj0" />

             <EditText
                android:id="@+id/eTpista6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.95" android:textSize="10dp" android:maxHeight="40dp" android:maxWidth="40dp"
                android:inputType="textMultiLine" >
            </EditText>
        </LinearLayout>
    </LinearLayout>
    <!-- BARRA INFERIOR -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <!-- PARTE IZQ -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|bottom"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/iBleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:src="@drawable/flechaizq" />

            <ImageButton
                android:id="@+id/iBright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:src="@drawable/flechader" />
        </LinearLayout>
        <!-- PARTE DER -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|bottom"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bDoneSelecPISTA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hecho!" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>